@using Projet3.Models
@model LoginViewModel
@Styles.Render("~/Content/login.css")

@{
    ViewBag.Title = "Connexion";
}

<h2>@ViewBag.Title.</h2>

<div class="wrapper fadeInDown">
    <h2>Espace administrateur</h2>
    <div id="formContent">

        <div class="fadeIn first">
            <img src="@Url.Content("~/Images/adminIcon.png")" width="120" height="200" id="icon" alt="User Icon" />

        </div>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.TextBoxFor(m => m.Email, new { @class = "fadeIn second" })
            <br />
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })





            @Html.PasswordFor(m => m.Password, new { @class = "fadeIn third" })
            <br />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })



            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>


            <input type="submit" value="Connexion" class="fadeIn fourth" />

            <p>
                @Html.ActionLink("S'inscrire comme nouvel utilisateur", "Register")
            </p>
            @* Activer ceci une fois que la confirmation de votre compte est activée pour la fonctionnalité de réinitialisation du mot de passe
            <p>
                @Html.ActionLink("Vous avez oublié votre mot de passe ?", "ForgotPassword")
            </p>*@
        }



    </div>
</div>


 





